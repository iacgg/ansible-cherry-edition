$TTL 60
$ORIGIN {{ env_domain }}.
@ IN SOA {{ hostvars[groups['dns']|first]['host_fqdn'] }}. root.local. (
        {{ bind_hostname_zone_serial }} ; serial
               30M ; refresh
               15M ; retry
                1W ; expiry
                1M ; nx ttl
)

{% for host in groups['dns']|sort %}
@ NS {{ hostvars[host]['host_fqdn'] }}.
{% endfor %}

{% for host in groups['all']|sort %}
{{ hostvars[host]['inventory_hostname'] }} A {{ hostvars[host]['primary_ip'] }}
{% endfor %}

