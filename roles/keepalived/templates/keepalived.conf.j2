{% if vrrp_scripts is defined %}
{% for name, values in vrrp_scripts.iteritems() %}
vrrp_script {{ name }} {
  interval "{{ values.scripts }}"
  interval {{ values.interval }}
}
{% endfor %}
{% endif %}

